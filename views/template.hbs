<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PDF Gerado</title>
    <style>
      body { font-family: Arial, sans-serif; margin-inline: 20px; } header,
      footer { width: 100%; text-align: center; position: fixed; } header { top:
      0; } footer { bottom: 0; } table { width: 100%; border-collapse: collapse;
      } table, th, td { border: 1px solid black; } th, td { padding: 10px;
      text-align: left; } th { background-color: #f2f2f2; }
    </style>
    <style>
      html,body,div{ -webkit-print-color-adjust: exact} span.logo { content:
      url("https://sooro.com.br/wp-content/uploads/2020/09/sooro-by-the-way.png")}
    </style>
  </head>
  <body>
    <table style="font-size:8px;">
      <thead>
        <tr>
          <th>Parâmetro</th>
          <th>Especificação</th>
          <th>Resultado</th>
          <th>Método</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr>
            <td>{{parameter_description}}</td>
            <td>{{specification}}</td>
            <td>{{result}}</td>
            <td>{{method_description}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>